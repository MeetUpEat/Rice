<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rectangle_component"
    android:padding="@dimen/default_margin16">

    <ImageView
        android:id="@+id/tv_meeting_thumbnail"
        style="@style/MeetingThumbnail"
        android:layout_width="@dimen/meeting_image60"
        android:layout_height="@dimen/meeting_image60"
        app:layout_constraintBottom_toBottomOf="@id/tv_meeting_main_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_meeting_title"
        tools:clipToOutline="true"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_meeting_title"
        style="@style/body_title16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin12"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_meeting_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="모임 이름 dummy dummy dummy dummy " />

    <TextView
        android:id="@+id/tv_meeting_main_menu"
        style="@style/body_title18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin12"
        android:layout_marginTop="@dimen/default_margin8"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_meeting_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_meeting_title"
        tools:text="만든 메뉴 dummy dummy dummy dummy " />

</androidx.constraintlayout.widget.ConstraintLayout>
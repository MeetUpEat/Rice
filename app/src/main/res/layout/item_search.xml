<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin8">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="@dimen/profile_image72"
        android:layout_height="@dimen/profile_image72"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_title"
        style="@style/body_title16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin4"
        android:layout_marginBottom="@dimen/default_margin16"
        android:text="제목 title"
        app:layout_constraintBottom_toTopOf="@id/tv_location"
        app:layout_constraintStart_toEndOf="@id/cv"
        app:layout_constraintTop_toTopOf="@id/cv" />

    <TextView
        android:id="@+id/tv_location"
        style="@style/body_content12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin4"
        android:text="위치 location"
        app:layout_constraintBottom_toBottomOf="@id/cv"
        app:layout_constraintStart_toEndOf="@id/cv"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/default_margin12"
        android:background="@color/clr_D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin8">

    <ImageView
        android:id="@+id/iv_thumbnail"
        style="@style/GalleryItemStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sample_image_salary" />

    <View
        android:id="@+id/v_edge_for_select"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_for_selected_image_edge"
        app:layout_constraintBottom_toBottomOf="@id/iv_thumbnail"
        app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
        app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_thumbnail" />

    <TextView
        android:id="@+id/tv_selected_order"
        style="@style/body_title16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin12"
        android:background="@drawable/background_for_selected_order"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_thumbnail"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/body_title16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin8"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
        app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/iv_thumbnail"
        tools:text="산에서 찍었어요 산에서 찍었어요 산에서 찍었어요 산에서 찍었어요 산에서 찍었어요 " />

</androidx.constraintlayout.widget.ConstraintLayout>